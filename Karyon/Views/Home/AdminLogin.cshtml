<script src="~/assets/js/jquery-3.6.0.min.js"></script>

<!-- plugins-jquery -->
<script src="~/assets/js/plugins-jquery.js"></script>

<!-- plugin_path -->

<script>var plugin_path = '/assets/js/';</script>

<!-- custom -->
<script src="~/assets/js/custom.js"></script>



</body>
</html>
