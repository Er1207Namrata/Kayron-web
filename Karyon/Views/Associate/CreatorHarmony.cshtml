@model Karyon.Models.CreatorBusiness

@{
    ViewData["Title"] = "CreatorHarmony";
    Layout = "~/Views/Shared/_AssociateLayout.cshtml";
}




    <div class="page-body">
        <div class="container-fluid">
            <div class="page-title">
                <div class="row">
                    <div class="col-sm-6 ps-0">
                    <h3>Creator Harmony</h3>
                    </div>
                    <div class="col-sm-6 pe-0">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="#">
                                    <svg class="stroke-icon">
                                        <use href="../../associatepanel/assets/svg/icon-sprite.svg#stroke-home"></use>
                                    </svg>
                                </a>
                            </li>
                        <li class="breadcrumb-item">Creator Harmony</li>
                        <li class="breadcrumb-item active"> Creator Harmony</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        
        
        
        <!-- /breadcrumb -->
    <!-- row -->
    @{
        decimal TotalOrderAmt = 0;
        decimal TotalOrderAmtR = 0;
        decimal TotalPV = 0;
        decimal TotalPVR = 0;
    }
    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                        Zone A Business
                    </div>
                <div class="card-body">
                    
                    <div class="table-responsive" id="details">
                        @if (Model != null)
                        {
                            if (Model.dtDetails != null)
                            {
                                if (Model.dtDetails.Rows.Count > 0)
                                {
                                    int j = 1;
                                    <table class="table mb-0" id="tblDetails">
                                        <thead>
                                            <tr>

                                                <th class="Sno">Sl No.</th>
                                                <th>Name</th>

                                                <th>Order Date</th>
                                                <th style="text-align:right">Business</th>

                                                <th>Calc Status</th>

                                            </tr>
                                        </thead>
                                        <tbody>


                                            @for (int i = 0; i <= Model.dtDetails.Rows.Count - 1; i++)
                                            {
                                                TotalOrderAmt = TotalOrderAmt + decimal.Parse(Model.dtDetails.Rows[i]["OrderAmount"].ToString());
                                                TotalPV = TotalPV + decimal.Parse(Model.dtDetails.Rows[i]["TotalPV"].ToString());
                                                <tr>
                                                    <td>@j</td>

                                                    <td>
                                                        @Model.dtDetails.Rows[i]["Name"].ToString() <br />
                                                        <span style="font-size: 10px;color: blue;font-style: italic;">@Model.dtDetails.Rows[i]["LoginId"].ToString()</span>
                                                    </td>
                                                    <td>@Model.dtDetails.Rows[i]["OrderDate"].ToString()</td>
                                                    <td style="text-align:right">
                                                        @Model.dtDetails.Rows[i]["OrderAmount"].ToString()
                                                        <br />
                                                        <span style="font-size: 10px;color: blue;font-style: italic;">PV - @Model.dtDetails.Rows[i]["TotalPV"].ToString()</span>
                                                    </td>


                                                    <td>
                                                        @if (Model.dtDetails.Rows[i]["Iscalc"].ToString() == "True")
                                                        {
                                                            <span class="badge bg-success">Calculated</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-warning">Pending</span>
                                                        }
                                                        <br />
                                                        <span style="font-size: 10px;color: blue;font-style: italic;">
                                                            @Model.dtDetails.Rows[i]["CalcDate"].ToString()
                                                        </span>
                                                    </td>


                                                </tr>
                                                j++;
                                            }


                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <td></td>

                                                <td style="text-align:right" colspan="2">Business : @TotalOrderAmt</td>

                                                <td colspan="2">PV : @TotalPV</td>


                                            </tr>
                                        </tfoot>
                                    </table>
                                }
                                else
                                {
                                    <p style="color:red">No Data Found...</p>
                                }
                            }
                            else
                            {
                                <p style="color:red">No Data Found...</p>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card">
                  <div class="card-header">
                        Zone B Business
                    </div>
                <div class="card-body">
                   
                    <div class="table-responsive" id="details">
                        @if (Model != null)
                        {
                            if (Model.dtDetailsR != null)
                            {
                                if (Model.dtDetailsR.Rows.Count > 0)
                                {
                                    int j = 1;
                                    <table class="table mb-0" id="tblDetails">
                                        <thead>
                                            <tr>

                                                <th class="Sno">Sl No.</th>

                                                <th>Name</th>
                                                <th>Order Date</th>
                                                <th style="text-align:right"> Business</th>


                                                <th>Calc Status</th>




                                            </tr>
                                        </thead>
                                        <tbody>


                                            @for (int i = 0; i <= Model.dtDetailsR.Rows.Count - 1; i++)
                                            {
                                                TotalOrderAmtR = TotalOrderAmtR + decimal.Parse(Model.dtDetailsR.Rows[i]["OrderAmount"].ToString());
                                                TotalPVR = TotalPVR + decimal.Parse(Model.dtDetailsR.Rows[i]["TotalPV"].ToString());
                                                <tr>
                                                    <td>@j</td>

                                                    <td>
                                                        @Model.dtDetailsR.Rows[i]["Name"].ToString() <br />
                                                        <span style="font-size: 10px;color: blue;font-style: italic;">
                                                            @Model.dtDetailsR.Rows[i]["LoginId"].ToString()
                                                        </span>
                                                    </td>
                                                    <td>@Model.dtDetailsR.Rows[i]["OrderDate"].ToString()</td>

                                                    <td style="text-align:right">
                                                        @Model.dtDetailsR.Rows[i]["OrderAmount"].ToString()
                                                        <br />
                                                        <span style="font-size: 10px;color: blue;font-style: italic;">PV - @Model.dtDetailsR.Rows[i]["TotalPV"].ToString()</span>
                                                    </td>



                                                    <td>
                                                        @if (Model.dtDetailsR.Rows[i]["Iscalc"].ToString() == "True")
                                                        {
                                                            <span class="badge bg-success">Calculated</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-warning">Pending</span>
                                                        }
                                                        <br />
                                                        <span style="font-size: 10px;color: blue;font-style: italic;">
                                                            @Model.dtDetailsR.Rows[i]["CalcDate"].ToString()
                                                        </span>
                                                    </td>


                                                </tr>
                                                j++;
                                            }

                                        </tbody>
                                        <tfoot>
                                            <tr>
                                                <td></td>

                                                <td style="text-align:right" colspan="2">Business : @TotalOrderAmtR</td>

                                                <td colspan="2">PV : @TotalPVR</td>


                                            </tr>
                                        </tfoot>
                                    </table>
                                    <footer class="card-footer bg-white p-2">

                                        <div class="d-md-flex align-items-center justify-content-between">
                                            @if (Model != null)
                                            {
                                                if (Model.Pager != null)
                                                {
                                                    @if (Model.Pager.EndPage > 1)
                                                    {
                                                        <div> Showing @Model.dtDetails.Rows.Count   of @Model.Pager.TotalItems items </div>
                                                        <div>
                                                            <ul class="pagination mb-0">
                                                                @if (Model.Pager.CurrentPage > 1)
                                                                {
                                                                    <li class="page-item">

                                                                        <a class="page-link" onclick="fCallPaging(1,0)" href="#">First</a>
                                                                    </li>



                                                                    <li class="page-item">
                                                                        <a class="page-link" onclick="fCallPaging(@(Model.Pager.CurrentPage - 1),0)" href="#">Previous</a>
                                                                    </li>
                                                                }
                                                                @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
                                                                {
                                                                    var P = @page;
                                                                    <li class="page-item @(page == Model.Pager.CurrentPage ? "active" : "")">


                                                                        <span><a class="page-link" onclick="fCallPaging(@P,0)" href="#">@P</a></span>
                                                                    </li>

                                                                }
                                                                @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
                                                                {
                                                                    <li class="page-item">

                                                                        <a class="page-link" onclick="fCallPaging(@(Model.Pager.CurrentPage + 1),0)" href="#">Next</a>

                                                                    </li>
                                                                    <li class="page-item">

                                                                        <a class="page-link" onclick="fCallPaging(@(Model.Pager.TotalPages),0)" href="#">Last</a>
                                                                    </li>
                                                                }
                                                            </ul>
                                                        </div>
                                                    }
                                                }

                                            }

                                        </div>
                                    </footer>
                                }
                                else
                                {
                                    <p style="color:red">No Data Found...</p>
                                }
                            }
                            else
                            {
                                <p style="color:red">No Data Found...</p>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

