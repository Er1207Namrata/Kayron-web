@model Karyon.Models.ChangePassword
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_AssociateLayout.cshtml";
}

<form asp-action="ChangePassword">
    <div class="page-body">
        <div class="container-fluid">
            <div class="page-title">
                <div class="row">
                    <div class="col-sm-6 ps-0">
                        <h3>Change Password</h3>
                    </div>
                    <div class="col-sm-6 pe-0">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="#">
                                    <svg class="stroke-icon">
                                        <use href="../../associatepanel/assets/svg/icon-sprite.svg#stroke-home"></use>
                                    </svg>
                                </a>
                            </li>
                            <li class="breadcrumb-item">My Accounts</li>
                            <li class="breadcrumb-item active"> Change Password</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <!-- /breadcrumb -->


        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4"></div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label">Old Password</label>
                                    <input type="text" asp-for="OldPassword" class="form-control" placeholder="Old Password" />
                                </div>

                            </div>


                        </div>
                        <div class="row">

                            <div class="col-md-4"></div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label">New Password</label>
                                    <input type="password" asp-for="NewPassword" class="form-control" placeholder="New Password" />
                                </div>

                            </div>



                        </div>
                        <div class="row">
                            <div class="col-md-4"></div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="control-label">Confirm Password</label>
                                    <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Confrim Password" />
                                </div>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4"></div>
                            <div class="col-md-4">
                                <div class="text-right">

                                    <button type="submit" value="Change" class="btn btn-success" onclick="return fvalidate();" name="Change">Change Password</button>
                                     <p style="color:red">@TempData["ChangePassword"]</p>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<script>

    function fvalidate() {
        $(".errortext").removeClass("errortext");
        if ($('#OldPassword').val() == '') {
            $("#OldPassword").addClass('errortext');
            $("#OldPassword").focus()
            return false;
        }
        if ($('#NewPassword').val() == '') {
            $("#NewPassword").addClass('errortext');
            $("#NewPassword").focus();
            return false;
        }
        if ($('#ConfirmPassword').val() == '') {
            $("#ConfirmPassword").addClass('errortext');
            $("#ConfirmPassword").focus();
            return false;
        }
        
        if ($('#NewPassword').val() != $('#ConfirmPassword').val()) {
            alert("New Password And ConfirmPassword Not Match ")
            return false;
        }
    }
</script>
