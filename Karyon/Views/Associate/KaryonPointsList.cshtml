@model Karyon.Models.KaryonPointsRequest

@{
    ViewData["Title"] = "Karyon Wallet List";
    Layout = "~/Views/Shared/_AssociateLayout.cshtml";
}
    

    <div class="page-body">
        <div class="container-fluid">
            <div class="page-title">
                <div class="row">
                    <div class="col-sm-6 ps-0">
                        <h3>Karyon Wallet Request</h3>
                    </div>
                    <div class="col-sm-6 pe-0">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="#">
                                    <svg class="stroke-icon">
                                        <use href="../../associatepanel/assets/svg/icon-sprite.svg#stroke-home"></use>
                                    </svg>
                                </a>
                            </li>
                            <li class="breadcrumb-item">Karyon Wallet</li>
                            <li class="breadcrumb-item active"> Karyon Wallet List</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <!-- /breadcrumb -->
        <!-- row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">

                    <div class="card-body">

                        <div class="table-responsive" id="details">
                        <table class="table table-bordered radio-first-col-width" id="MyDirectList">
                            <thead style="background: #40541d;">
                                    <tr>

                                    <th class ="text-white">
                                        Sl No.</th>
                                        <th class="text-white">Amount</th>
                                        <th class="text-white">Payment Mode</th>
                                        <th class="text-white">Transaction No</th>
                                        <th class="text-white">Transaction Date</th>
                                        <th class="text-white">Requested Date</th>
                                        <th class="text-white">Status</th>
                                    </tr>
                                </thead>
                                <tbody>

                                @if (Model != null)
                                {
                                    if (Model.dtdetails != null)
                                    {
                                        if (Model.dtdetails.Rows.Count > 0)
                                        {
                                            int j = 1;
                                            string cssclass = "";
                                            for (var i = 0; i < Model.dtdetails.Rows.Count; i++)
                                            {
                                                if (Model.dtdetails.Rows[i]["Status"].ToString() == "Approved")
                                                {
                                                    cssclass = "btn btn-success btn-sm";
                                                }
                                                else if (Model.dtdetails.Rows[i]["Status"].ToString() == "Declined")
                                                {
                                                    cssclass = "btn btn-danger btn-sm";
                                                }
                                                else
                                                {
                                                    cssclass = "btn btn-info btn-sm";
                                                }

                                                    <tr>
                                                        <td class="Sno">@j</td>

                                                        <td>@Model.dtdetails.Rows[i]["Amount"].ToString()</td>
                                                        <td>@Model.dtdetails.Rows[i]["PaymentMode"].ToString()</td>
                                                        <td>@Model.dtdetails.Rows[i]["TransactionNo"].ToString()</td>
                                                        <td>@Model.dtdetails.Rows[i]["TransactionDate"].ToString()</td>
                                                        <td>@Model.dtdetails.Rows[i]["RequestedDate"].ToString()</td>
                                                        <td>
                                                            <a class="@cssclass" href="#" style="cursor:text">
                                                            @Model.dtdetails.Rows[i]["Status"].ToString()
                                                            </a>
                                                        </td>

                                                    </tr>
                                                j += 1;
                                            }
                                        }
                                    }

                                }

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




